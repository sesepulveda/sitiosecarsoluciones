@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es-cl">
<head>
    @if (ViewBag.Produccion == 1)
    {
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-55339847-3"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());

            gtag('config', 'UA-55339847-3');
        </script>
