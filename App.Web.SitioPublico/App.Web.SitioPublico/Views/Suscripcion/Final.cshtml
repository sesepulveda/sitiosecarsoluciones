                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Vendor JS Files -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>
    <script src="~/vendor/jquery-sticky/jquery.sticky.js"></script>
    <script src="~/vendor/venobox/venobox.min.js"></script>
    <script src="~/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/vendor/counterup/counterup.min.js"></script>
    <script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/vendor/aos/aos.js"></script>
    <script src="~/js/main.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var autorizado = window.localStorage.getItem('respondeCode') == 0 ? true : false;

            document.getElementById('titulo').innerHTML = autorizado ? "Transacci&oacute;n Exitosa" :
                "Transacci&oacute;n Rechazada";

            if (autorizado) {
                $("#transaccion-correcta").show();
                $("#transaccion-incorrecta").hide();
                document.getElementById('numeroOrden').innerHTML = window.localStorage.getItem('nroOrden');
                document.getElementById('comercio').innerHTML = window.localStorage.getItem('commerce');
                document.getElementById('monto').innerHTML = window.localStorage.getItem('amount');
                document.getElementById('codigoAutorizacion').innerHTML = window.localStorage.getItem('authorizationCode');
                document.getElementById('fechaTransaccion').innerHTML = window.localStorage.getItem('transaccionDate');
                document.getElementById('medioPago').innerHTML = window.localStorage.getItem('descPaymentTypeCode');
                document.getElementById('cuotas').innerHTML = window.localStorage.getItem('sharesNumber');
                document.getElementById('numeroTarjeta').innerHTML = window.localStorage.getItem('cardNumber');
                document.getElementById('servicio').innerHTML = window.localStorage.getItem('service');
            }
            else {
                $("#transaccion-correcta").hide();
                $("#transaccion-incorrecta").show();
                document.getElementById('numeroOrdenError').innerHTML = window.localStorage.getItem('nroOrden');
            }




        });

        function VerBuscador() {
            var vista = "/PagoCliente/Buscador?cliente=" + window.localStorage.getItem('rutCliente');;
            window.location.href = vista;

        }
    </script>
</body>
</html>
